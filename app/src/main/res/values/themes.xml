<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/color1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color1</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/color1</item>
        <item name="colorButtonNormal">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="colorControlHighlight">@color/color4</item>
    </style>
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="colorPrimaryDark">@color/color1</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/color1</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">14dp</item>
        <item name="cornerSizeTopLeft">14dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="shape_able_image_view_rounded_style">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="shape_able_image_view_circle_style">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>